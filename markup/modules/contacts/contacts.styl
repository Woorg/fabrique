.contacts
	position relative
	margin-top -4px
	background-color #404041
	&__in
		padding-top 60px
		padding-bottom 10px
		@extend .in
	&__title
		position relative
		margin-bottom 76px
		padding-bottom 20px
		font-family $roboto-bld
		font-size 56px
		font-weight normal
		text-transform uppercase
		text-align center
		color #FFF
		&:after
			position absolute
			content ""
			bottom -12px
			left 50%
			margin-left -82px
			border-top 12px solid #ffba00
			width 165px
	&__w
		border-bottom 6px solid #585858
		padding-bottom 37px
		clearfix()
	&__text
		margin-right 135px
		float left
		width 500px
		font-size 24px
		color #a3a3a3
		line-height 30px
		span
			font-family $roboto-bld
			text-transform uppercase
			display block
	&__phones
		position relative
		margin-top 24px
		padding-left 57px
		float left
	&__phone-icon
		position absolute
		top 17px
		left 0
		bg($phone-2)
	&__phone-number
		margin-bottom 8px
		font-family $roboto-bld
		font-size 24px
		line-height 1
		color $title-color
	&__emails
		position relative
		margin-top 24px
		margin-left 155px
		padding-left 66px
		float left
	&__email-icon
		position absolute
		top 16px
		left 0
		bg($mail)
	&__email
		margin-bottom 8px
		display block
		font-family $roboto-bld
		font-size 24px
		font-weight normal
		line-height 1
		color #fec90a
		&:hover
			text-decoration none
	&__form
		padding-top 52px
		clearfix()
	&__input-w
		width 468px
		float left
	&__input
		margin-bottom 32px
		size 468px 68px
		border 3px solid #a3a3a3
		border-radius 8px
		input
			border none
			padding-left 24px
			width 100%
			height 100%
			background transparent
			font-size 24px
			line-height 1
			color #a3a3a3
			border-radius 8px
	&__textarea
		margin-left 80px
		float left
		size 864px 270px
		border 3px solid #a3a3a3
		border-radius 8px
		textarea
			border none
			padding-top 30px
			padding-left 28px
			width 100%
			height 100%
			background transparent
			font-size 24px
			line-height 1
			color #a3a3a3
			border-radius 8px
	&__submit
		margin-top 44px
		margin-left 84px
		float left
		size 172px
		border 6px solid #a3a3a3
		border-radius 50%
		input
			border none
			width 100%
			height 100%
			background transparent
			font-size 24px
			color #a3a3a3
			border-radius 50%
		&:hover
			border 6px solid #ffba00
			input
				color #FFBA00



