mixin pricing(data)
	+b('section').pricing
		+e.in
			+e.list
				+e.plan._1
					+e('h2').plan-title На первое <br/>время

					+b('ul').services
						+e('li').service._1
							+e.service-icon
							+e.service-title Разработка <br/>логотипа
						+e('li').service._2
							+e.service-icon
							+e.service-title Разработка дизайна <br/>визитки
						+e('li').service._3
							+e.service-icon
							+e.service-title Печать 100 визиток

					+e.price
						+e.price-w
							+e.price-text Стоимость:
							+e.price-val 5000
							+e.price-curr &#8381;

					+e.button-w
