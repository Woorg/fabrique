.pricing
	&__in
		padding-top 144px
		padding-bottom 203px
		@extend .in
	&__list
		clearfix()
	&__plan
		position relative
		border 6px solid transparent
		margin-left 57px
		padding-top 38px
		padding-left 30px
		padding-right 30px
		float left
		background-color #f2f2f2
		width 518px
		height 1222px
		&:first-child
			margin-left 0
		&_1
			border 6px solid #a8cc08
			padding-left 60px
			padding-right 60px
			&:after
				position absolute
				content ""
				bottom -70px
				left -0px
				width 0
				height 0
				border-style solid
				border-width 70px 253px 0 253px
				border-color #f2f2f2 transparent transparent transparent
			&:before
				position absolute
				content ""
				bottom -77px
				left -6px
				width 0
				height 0
				border-style: solid
				border-width 71px 259px 0 259px
				border-color #a8cc08 transparent transparent transparent
		&_2
			border 6px solid #ffc10f
			padding-left 40px
			padding-right 40px
			&:after
				position absolute
				content ""
				bottom -70px
				left -0px
				width 0
				height 0
				border-style solid
				border-width 70px 253px 0 253px
				border-color #f2f2f2 transparent transparent transparent
			&:before
				position absolute
				content ""
				bottom -77px
				left -6px
				width 0
				height 0
				border-style: solid
				border-width 71px 259px 0 259px
				border-color #ffc10f transparent transparent transparent
		&_3
			border 6px solid #ee4037
			padding-left 40px
			padding-right 40px
			&:after
				position absolute
				content ""
				bottom -70px
				left -0px
				width 0
				height 0
				border-style solid
				border-width 70px 253px 0 253px
				border-color #f2f2f2 transparent transparent transparent
			&:before
				position absolute
				content ""
				bottom -77px
				left -6px
				width 0
				height 0
				border-style: solid
				border-width 71px 259px 0 259px
				border-color #ee4037 transparent transparent transparent
	&__plan-title
		margin-bottom 50px
		font-family $roboto-med
		font-size 48px
		font-weight 400
		color $text-color
		line-height 54px
		letter-spacing tracking(-27)
		text-transform uppercase
		text-align center
	&__price
		border-top 4px solid #e1e1e1
		border-bottom 4px solid #e1e1e1
		margin-bottom 56px
		padding-top 32px
		padding-bottom 40px
		text-align center
	&__price-w
		display inline-block
	&__price-text
		padding-right 10px
		display inline-block
		vertical-align middle
		font-family $roboto-bld
		font-weight normal
		color $text-color
		letter-spacing tracking(-27)
		line-height 1
	&__price-val
		position relative
		padding-left 10px
		padding-right 10px
		display inline-block
		vertical-align middle
		background-color #ffba00
		color #FFF
		font-family $roboto-med
		font-size 60px
		font-weight normal
		line-height 66px
		&:after
			position absolute
			content ""
			top 0
			right -10px
			bg($price-right)

		&:before
			position absolute
			content ""
			top 0
			left -10px
			bg($price-left)

	&__price-curr
		padding-left 10px
		display inline-block
		vertical-align middle
		font-family $roboto-med
		font-size 60px
		font-weight normal
	&__button-w
		text-align center
	&__button
		border 4px solid #5b5b5b
		border-radius 8px
		padding-top 21px
		padding-right 88px
		padding-bottom 21px
		padding-left 98px
		display inline-block
		font-family $roboto-bld
		font-weight normal
		color $text-color
		text-transform uppercase
		text-decoration none
		&:hover
			border 4px solid #ffba00
			border-radius 8px
			color #ffba00
.services
	min-height 660px
	&__service
		margin-bottom 38px
		display table
		&_1
			.services__service-icon
				bg($service-1)
		&_2
			.services__service-icon
				bg($service-2)
		&_3
			.services__service-icon
				bg($service-3)
		&_4
			.services__service-icon
				bg($service-4)
		&_5
			.services__service-icon
				bg($service-5)
		&_6
			.services__service-icon
				bg($service-6)
	&__service-icon
		display table-cell
	&__service-title
		padding-left 28px
		display table-cell
		vertical-align middle
		color $text-color
		letter-spacing tracking(-27)




